<form method="post">
    <p class="text-danger">
        {{ warning_msg }}
    </p>

    <div class="row justify-content-center">
        <div class="col-12 col-lg-6 border border-dark p-0">
            {% for block in sudoku.blocks %}
                {% if block.id == 0 or block.id % amount_of_rows == 0 %}
                    <div class="row g-0">
                {% endif %}

                {% include "components/block.html.twig" %}

                {% if (block.id + 1) % amount_of_rows == 0 %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>

    <div class="row justify-content-center mt-3 mb-3">
        {% include "components/button.html.twig" with {
            'type': 'submit',
            'name': 'solve',
            'color': 'primary'
        } %}

        {% include "components/button.html.twig" with {
            'type': 'submit',
            'name': 'clear',
            'color': 'danger'
        } %}
    </div>
</form>